<?xml version="1.0" encoding="UTF-8"?>
<grammar ns="http://www.tei-c.org/ns/1.0" xmlns="http://relaxng.org/ns/structure/1.0" datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes">
  <start>
    <element name="TEI">
      <element name="teiHeader">
        <attribute>
          <name ns="http://www.w3.org/XML/1998/namespace">lang</name>
          <data type="NCName"/>
        </attribute>
        <element name="fileDesc">
          <element name="titleStmt">
            <ref name="title"/>
          </element>
          <element name="editionStmt">
            <element name="edition">
              <text/>
            </element>
            <element name="respStmt">
              <oneOrMore>
                <choice>
                  <element name="persName">
                    <attribute name="type">
                      <data type="NCName"/>
                    </attribute>
                    <attribute>
                      <name ns="http://www.w3.org/XML/1998/namespace">id</name>
                      <data type="NCName"/>
                    </attribute>
                    <text/>
                  </element>
                  <element name="resp">
                    <oneOrMore>
                      <choice>
                        <text/>
                        <ref name="date"/>
                      </choice>
                    </oneOrMore>
                  </element>
                </choice>
              </oneOrMore>
            </element>
          </element>
          <element name="publicationStmt">
            <element name="authority">
              <text/>
            </element>
            <element name="address">
              <oneOrMore>
                <element name="addrLine">
                  <data type="anyURI"/>
                </element>
              </oneOrMore>
            </element>
            <element name="availability">
              <attribute name="n">
                <data type="NCName"/>
              </attribute>
              <attribute name="status">
                <data type="NCName"/>
              </attribute>
              <element name="licence">
                <attribute name="target">
                  <data type="anyURI"/>
                </attribute>
              </element>
              <oneOrMore>
                <ref name="p"/>
              </oneOrMore>
            </element>
          </element>
          <element name="sourceDesc">
            <element name="bibl">
              <element name="author">
                <text/>
              </element>
              <ref name="title"/>
              <element name="publisher">
                <text/>
              </element>
              <element name="placeName">
                <data type="NCName"/>
              </element>
              <ref name="date"/>
              <element name="biblScope">
                <attribute name="from">
                  <data type="integer"/>
                </attribute>
                <attribute name="to">
                  <data type="integer"/>
                </attribute>
                <attribute name="unit">
                  <data type="NCName"/>
                </attribute>
                <data type="NMTOKEN"/>
              </element>
            </element>
            <element name="listWit">
              <oneOrMore>
                <element name="witness">
                  <attribute>
                    <name ns="http://www.w3.org/XML/1998/namespace">id</name>
                    <data type="NCName"/>
                  </attribute>
                  <text/>
                </element>
              </oneOrMore>
            </element>
          </element>
        </element>
        <element name="encodingDesc">
          <element name="editorialDecl">
            <element name="normalization">
              <ref name="p"/>
            </element>
            <element name="correction">
              <ref name="p"/>
            </element>
            <element name="hyphenation">
              <ref name="p"/>
            </element>
            <element name="punctuation">
              <ref name="p"/>
            </element>
            <element name="quotation">
              <oneOrMore>
                <ref name="p"/>
              </oneOrMore>
            </element>
            <element name="segmentation">
              <ref name="p"/>
            </element>
          </element>
          <element name="variantEncoding">
            <attribute name="location">
              <data type="NCName"/>
            </attribute>
            <attribute name="method">
              <data type="NCName"/>
            </attribute>
          </element>
        </element>
        <element name="profileDesc">
          <element name="langUsage">
            <oneOrMore>
              <element name="language">
                <attribute name="ident">
                  <data type="NCName"/>
                </attribute>
                <data type="NCName"/>
              </element>
            </oneOrMore>
          </element>
        </element>
        <element name="revisionDesc">
          <oneOrMore>
            <element name="change">
              <attribute name="resp"/>
              <attribute name="type">
                <data type="NCName"/>
              </attribute>
              <oneOrMore>
                <choice>
                  <text/>
                  <ref name="date"/>
                </choice>
              </oneOrMore>
            </element>
          </oneOrMore>
        </element>
      </element>
      <element name="text">
        <attribute name="n">
          <data type="integer"/>
        </attribute>
        <attribute name="type">
          <data type="NCName"/>
        </attribute>
        <element name="body">
          <oneOrMore>
            <element name="div">
              <attribute name="type">
                <data type="NCName"/>
              </attribute>
              <element name="head">
                <text/>
              </element>
              <element name="stage">
                <text/>
              </element>
              <oneOrMore>
                <element name="sp">
                  <element name="speaker">
                    <oneOrMore>
                      <choice>
                        <text/>
                        <ref name="app"/>
                      </choice>
                    </oneOrMore>
                  </element>
                  <ref name="p"/>
                </element>
              </oneOrMore>
            </element>
          </oneOrMore>
        </element>
      </element>
    </element>
  </start>
  <define name="title">
    <element name="title">
      <text/>
    </element>
  </define>
  <define name="date">
    <element name="date">
      <optional>
        <attribute name="type">
          <data type="NCName"/>
        </attribute>
      </optional>
      <attribute name="when">
        <data type="NMTOKEN"/>
      </attribute>
      <text/>
    </element>
  </define>
  <define name="p">
    <element name="p">
      <oneOrMore>
        <choice>
          <text/>
          <ref name="app"/>
        </choice>
      </oneOrMore>
    </element>
  </define>
  <define name="app">
    <element name="app">
      <element name="lem">
        <attribute name="wit"/>
        <text/>
      </element>
      <oneOrMore>
        <element name="rdg">
          <attribute name="wit"/>
          <text/>
        </element>
      </oneOrMore>
    </element>
  </define>
